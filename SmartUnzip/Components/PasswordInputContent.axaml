<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:components="clr-namespace:SmartUnzip.Components"
             xmlns:avalonia="https://github.com/projektanker/icons.avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SmartUnzip.Components.PasswordInputContent"
             x:DataType="components:PasswordInputContentDataContext">
    <Grid RowDefinitions="*,Auto">
        <Grid ColumnDefinitions="*,10,auto">
            <TextBox Watermark="密码" UseFloatingWatermark="True" Text="{Binding NewPassword,Mode=TwoWay}">
                
                <TextBox.KeyBindings>
                    <KeyBinding Command="{Binding AddPasswordCommand}" Gesture="Enter" />
                </TextBox.KeyBindings>
                
            </TextBox>
            <Button Grid.Column="2" Command="{Binding AddPasswordCommand}" avalonia:Attached.Icon="mdi-lock-plus"></Button>
        </Grid>
        <Label Grid.Row="1" IsVisible="{Binding !IsPasswordValid}" Foreground="Red"
               Content="{Binding PasswordAlertText,StringFormat=' {0} 已经存在'}">
        </Label>
    </Grid>
</UserControl>